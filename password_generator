import random
import string
import tkinter as tk

def generate_password():
    characters = string.ascii_letters + string.digits + string.punctuation
    password = ''.join(random.choice(characters) for _ in range(18))

    result_entry.delete(0, tk.END)
    result_entry.insert(0, password)

def copy_password():
    password = result_entry.get()
    if password:
        window.clipboard_clear()
        window.clipboard_append(password)

# Create the window
window = tk.Tk()
window.title("Très Super Duper")
window.geometry("400x230")

# Title label
title_label = tk.Label(window, text="18-Character Password Generator", font=("Arial", 16))
title_label.pack(pady=15)

# Generate button
button = tk.Button(window, text="Get that mf", font=("Arial", 14), command=generate_password)
button.pack(pady=5)

# Entry field (copyable)
result_entry = tk.Entry(window, font=("Courier", 14), justify="center")
result_entry.pack(pady=10, fill="x", padx=20)

# Copy button
copy_button = tk.Button(window, text="копия", font=("Arial", 12), command=copy_password)
copy_button.pack(pady=5)

# Start the app
window.mainloop()
